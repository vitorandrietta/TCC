@model IList<Eletronics.WEB.Models.SupplierScreenModel>
@{
    WebGrid gridConsulta = new WebGrid(Model, rowsPerPage: 10);
}

@gridConsulta.GetHtml(tableStyle: "webGrid",
            headerStyle: "header",
            alternatingRowStyle: "alt",
                selectedRowStyle: "select", columns: gridConsulta.Columns
                (gridConsulta.Column("CorporateName", "Nome da corporação"),
                gridConsulta.Column("CNPJ", "CNPJ"),
                gridConsulta.Column("SupplierTypeDescription", "Descrição do tipo do fornecedor")))