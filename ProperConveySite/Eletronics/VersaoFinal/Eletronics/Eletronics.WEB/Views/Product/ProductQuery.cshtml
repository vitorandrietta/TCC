@model IList<Eletronics.WEB.Models.ProductScreenModel>
@{
    WebGrid gridConsulta = new WebGrid(Model, rowsPerPage: 10);
}

@gridConsulta.GetHtml(tableStyle: "webGrid",
            headerStyle: "header",
            alternatingRowStyle: "alt",
            selectedRowStyle: "select",
            columns: gridConsulta.Columns
            (gridConsulta.Column("ProductID", "ID do produto"), gridConsulta.Column("ProductName", "Nome do produto"),
             gridConsulta.Column("ProductDescription", "Descrição do produto"),
             gridConsulta.Column("AvaiableQuantity", "Quantidade disponíel"),
             gridConsulta.Column("SupplierId", "CNPJ do fornecedor"),
             gridConsulta.Column("SupplierName", "Nome do fornecedor")))
