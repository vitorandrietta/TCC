@{
    ViewBag.Title = "Login";
}



<div class="container">
    <h2>Login</h2>
    <form id="formLogin" role="form" class="productForm">

        <div class="form-group">
            <label for="username">Médico</label>
            <input type="text" id="username" class="form-control" /><br />
        </div>

        <div class="form-group">
            <label for="password">Senha:</label>
            <input type="password" id="password" class="form-control" /><br />
        </div>

        <button class="login btn btn-primary">Logar</button>
    </form>
</div>


<script src="~/Scripts/Client/Login.js"></script>