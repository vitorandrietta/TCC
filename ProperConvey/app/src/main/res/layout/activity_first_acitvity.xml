<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="properconvey.com.br.properconvey.activities.LoginAcitvity">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/lapisdecor"
            />

        <TextView
            android:layout_width="110dp"
            android:layout_height="45dp"
            android:text="Senha"
            android:id="@+id/textView2"
            android:layout_alignParentStart="true"
            android:textColor="#ffffffff"
            android:textSize="20dp"
            android:layout_gravity="left|center_vertical" />
    </FrameLayout>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UsuÃ¡rio"
            android:id="@+id/textView"
            android:layout_alignBottom="@+id/nomeEdit"
            android:layout_alignParentStart="true"
            android:textColor="#effefffd"
            android:textSize="20dp"
            android:textIsSelectable="false"
            android:layout_gravity="left|top" />



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/botaologar"
        android:id="@+id/btnLogar"
        android:layout_marginBottom="167dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/passwordEdit"

        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nomeEdit"
        android:layout_above="@+id/passwordEdit"
        android:layout_alignStart="@+id/passwordEdit"
        android:layout_marginBottom="51dp"
        android:layout_alignEnd="@+id/passwordEdit" />

</RelativeLayout>
