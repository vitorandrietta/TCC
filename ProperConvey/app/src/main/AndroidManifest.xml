<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="properconvey.com.br.properconvey" >

    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activities.LoginActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.TesteActivity"
            android:label="@string/title_activity_teste"
            android:theme="@style/AppTheme.NoActionBar" >

            <meta-data android:name="com.google.android.apps.drive.APP_ID" android:value="id=1017702283051" />
            <intent-filter>
                <action android:name="com.google.android.apps.drive.DRIVE_OPEN" />
                  <data android:mimeType="application/vnd.google-apps.audio" />
                <data android:mimeType="application/vnd.google-apps.file" />

            </intent-filter>
        </activity>
    </application>

</manifest>
